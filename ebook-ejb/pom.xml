                        </excludes>
                        <filtering>false</filtering>
                    </testResource>
                    -->
                </testResources>
                
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.17</version>
                        <executions>
