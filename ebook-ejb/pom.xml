                    <version>2.1.0.Final</version>
                    <scope>test</scope>
                </dependency>-->
               
            </dependencies>
            <build>
                <testResources>
                    <testResource>
                        <directory>src/test/resources</directory>
                        <includes>
                            <include>**/arquillian.xml</include>
                        </includes>
                        <filtering>true</filtering>
                    </testResource>
                    
                    <!--
                    <testResource>
                        <directory>src/test/resources</directory>
