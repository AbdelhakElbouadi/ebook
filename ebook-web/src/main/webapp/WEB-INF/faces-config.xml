<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>
        <description>General Admin Navigation</description>
        <from-view-id>/admin/*</from-view-id>
        
        <navigation-case>
            <from-outcome>/admin/index</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/createBook</from-outcome>
            <to-view-id>/admin/book/Create.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/editBook</from-outcome>
            <to-view-id>/admin/book/Edit.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/deleteBook</from-outcome>
            <to-view-id>/admin/book/Delete.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/viewBook</from-outcome>
            <to-view-id>/admin/book/View.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/profileBook</from-outcome>
            <to-view-id>/admin/book/Profile</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/createAuthor</from-outcome>
            <to-view-id>/admin/author/Create.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/viewAuthor</from-outcome>
            <to-view-id>/admin/author/View.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/createPublisher</from-outcome>
            <to-view-id>/admin/publisher/Create.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/viewPublisher</from-outcome>
            <to-view-id>/admin/publisher/View.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/addAdmin</from-outcome>
            <to-view-id>/admin/add-adminuser.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/viewAdmin</from-outcome>
            <to-view-id>/admin/view-adminuser.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/admin/report</from-outcome>
            <to-view-id>/admin/report/report.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>add-user navigation</description>
        <from-view-id>/admin/add-adminuser.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>
    
</faces-config>
